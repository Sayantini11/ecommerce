<h2>Listing Products (<%= @products.length %>) </h2>
<% if @products.empty? %>
    <p> No products found </p>
 <% else %>
    <ol>
       <% @products.each do |product| %>
          <li>
          	<%#= "#{product.name} - INR #{product.price} - #{product.description} - #{product.category_id}" %>

          	<%#= "#{product.name} - INR #{product.price} - #{product.description} - #{product.category_id}" %>
          	<%= link_to product.name, product_path(product.id) %> - INR <%= product.price %> - <%= product.description %> - <%= Category.find(product.category_id).name %> -  
          	<%= link_to "show", product_path(product.id) %>
          </li>
          	
       <% end %>

    </ol>
<% end %>

<%= link_to "Add Product",new_product_path %>



